---
// Componente atómico StatusBadge - Para mostrar estados con colores
// Props esperadas:
// - status: 'success' | 'warning' | 'danger' | 'info' | 'blocked'
// - size: 'sm' | 'md' | 'lg'
// - children: contenido del badge

const { status = "info", size = "md" } = Astro.props;
---

<span
  class={`atom-status-badge atom-status-badge--${status} atom-status-badge--${size}`}
>
  <slot />
</span>

<style>
  .atom-status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-weight: 600;
    border-radius: 20px;
    text-align: center;
  }

  /* Estados */
  .atom-status-badge--success {
    background-color: #d4edda;
    color: #155724;
  }

  .atom-status-badge--warning {
    background-color: #fff3cd;
    color: #856404;
  }

  .atom-status-badge--danger {
    background-color: #f8d7da;
    color: #721c24;
  }

  .atom-status-badge--blocked {
    background-color: #dc3545;
    color: white;
  }

  .atom-status-badge--info {
    background-color: #d1ecf1;
    color: #0c5460;
  }

  /* Tamaños */
  .atom-status-badge--sm {
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
  }

  .atom-status-badge--md {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .atom-status-badge--lg {
    padding: 0.75rem 1.25rem;
    font-size: 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .atom-status-badge--lg {
      padding: 0.625rem 1rem;
      font-size: 0.9rem;
    }

    .atom-status-badge--md {
      padding: 0.375rem 0.875rem;
      font-size: 0.8rem;
    }
  }
</style>
