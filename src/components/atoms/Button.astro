---
// Componente atómico Button - El átomo más básico y reutilizable
// Props esperadas:
// - variant: 'primary' | 'secondary' | 'danger' | 'blocked' | 'success'
// - size: 'sm' | 'md' | 'lg'
// - disabled: boolean
// - loading: boolean
// - type: 'button' | 'submit' | 'reset'
// - onclick: function
// - children: contenido del botón

const {
  variant = "primary",
  size = "md",
  disabled = false,
  loading = false,
  type = "button",
  onclick = null,
} = Astro.props;
---

<button
  type={type}
  disabled={disabled || loading}
  onclick={onclick}
  class={`atom-button atom-button--${variant} atom-button--${size} ${loading ? "atom-button--loading" : ""}`}
  aria-disabled={disabled || loading}
>
  {loading && <span class="atom-button__spinner" aria-hidden="true" />}
  <slot />
</button>

<style>
  .atom-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: inherit;
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    position: relative;
    outline: none;
  }

  /* Variantes */
  .atom-button--primary {
    background-color: #4caf50;
    color: white;
  }

  .atom-button--primary:hover:not(:disabled):not(.atom-button--loading) {
    background-color: #45a049;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
  }

  .atom-button--secondary {
    background-color: #6c757d;
    color: white;
  }

  .atom-button--secondary:hover:not(:disabled):not(.atom-button--loading) {
    background-color: #5a6268;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
  }

  .atom-button--danger {
    background-color: #dc3545;
    color: white;
  }

  .atom-button--danger:hover:not(:disabled):not(.atom-button--loading) {
    background-color: #c82333;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
  }

  .atom-button--blocked {
    background-color: #dc3545;
    color: white;
    cursor: not-allowed;
  }

  .atom-button--blocked:hover {
    background-color: #dc3545;
    transform: none;
    box-shadow: none;
  }

  .atom-button--success {
    background-color: #28a745;
    color: white;
  }

  .atom-button--success:hover:not(:disabled):not(.atom-button--loading) {
    background-color: #218838;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
  }

  /* Tamaños */
  .atom-button--sm {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    min-height: 36px;
  }

  .atom-button--md {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    min-height: 44px;
  }

  .atom-button--lg {
    padding: 1rem 2rem;
    font-size: 1.125rem;
    min-height: 52px;
  }

  /* Estados */
  .atom-button:disabled,
  .atom-button--loading {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .atom-button:focus-visible {
    outline: 2px solid #4caf50;
    outline-offset: 2px;
  }

  /* Spinner de carga */
  .atom-button__spinner {
    width: 1rem;
    height: 1rem;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: atom-button-spin 1s linear infinite;
  }

  @keyframes atom-button-spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .atom-button--lg {
      padding: 0.875rem 1.75rem;
      font-size: 1rem;
    }

    .atom-button--md {
      padding: 0.625rem 1.25rem;
      font-size: 0.9rem;
    }
  }
</style>
