---
// Componente de navegaci칩n principal
---

<nav class="navigation">
  <div class="nav-container">
    <div class="nav-brand">
      <a href="/" class="brand-link"> Sura Web</a>
    </div>

    <!-- Bot칩n hamburguesa para mobile -->
    <button class="hamburger" id="hamburgerButton" aria-label="Men칰">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Men칰 desktop -->
    <div class="nav-menu">
      <div class="nav-user" id="navUser">
        <span class="nav-user__icon">游녻</span>
        <span class="nav-user__name" id="vendedorName">Cargando...</span>
      </div>
      <a href="/" class="nav-link"> 游논 Clientes </a>
      <a href="/producto" class="nav-link"> 游닍 Productos </a>
      <a href="/ventas" class="nav-link"> 游눯 Ventas </a>
      <a href="/carrito" class="nav-link cart-link">
        游 Carrito
        <span class="cart-count" id="cart-count">0</span>
      </a>
      <button class="nav-link nav-link--button" id="logoutButton" title="Cerrar Sesi칩n">
        游뛁 Salir
      </button>
    </div>

    <!-- Men칰 mobile (desplegable) -->
    <div class="nav-menu-mobile" id="navMenuMobile">
      <div class="nav-user-mobile" id="navUserMobile">
        <span class="nav-user__icon">游녻</span>
        <span class="nav-user__name" id="vendedorNameMobile">Cargando...</span>
      </div>
      <a href="/" class="nav-link-mobile"> 游논 Clientes </a>
      <a href="/producto" class="nav-link-mobile"> 游닍 Productos </a>
      <a href="/ventas" class="nav-link-mobile"> 游눯 Ventas </a>
      <a href="/carrito" class="nav-link-mobile cart-link-mobile">
        游 Carrito
        <span class="cart-count-mobile" id="cart-count-mobile">0</span>
      </a>
      <button class="nav-link-mobile nav-link-mobile--button" id="logoutButtonMobile" title="Cerrar Sesi칩n">
        游뛁 Salir
      </button>
    </div>
  </div>
</nav>

<style>
  .navigation {
    background: linear-gradient(
      135deg,
      rgba(0, 168, 120, 0.95) 0%,
      rgba(0, 168, 120, 0.9) 100%
    );
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0, 168, 120, 0.15);
    position: sticky;
    top: 0;
    z-index: 1000;
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 168, 120, 0.2);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
  }

  .brand-link {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    text-decoration: none;
    transition: var(--transition);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .brand-link:hover {
    color: #f5f5f0;
    transform: scale(1.05);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .nav-menu {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius);
    transition: var(--transition);
    position: relative;
  }

  .nav-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
  }

  .cart-link {
    position: relative;
  }

  .cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #fe5e41ff;
    color: #ffffff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(254, 94, 65, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .nav-link--button {
    background: transparent;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-weight: 500;
  }

  .nav-link--button:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .nav-user {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.95);
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .nav-user__icon {
    font-size: 1.1rem;
  }

  .nav-user__name {
    white-space: nowrap;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Bot칩n hamburguesa - oculto por defecto */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 30px;
    height: 30px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }

  .hamburger-line {
    width: 100%;
    height: 3px;
    background: #ffffff;
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  /* Men칰 mobile - oculto por defecto */
  .nav-menu-mobile {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 168, 120, 0.98) 0%,
      rgba(0, 168, 120, 0.95) 100%
    );
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 168, 120, 0.3);
    padding: 1rem;
    gap: 0.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 999;
  }

  .nav-menu-mobile.active {
    display: flex;
  }

  .nav-link-mobile {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 500;
    padding: 1rem;
    border-radius: var(--border-radius);
    transition: var(--transition);
    text-align: left;
    width: 100%;
  }

  .nav-link-mobile:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
  }

  .nav-link-mobile--button {
    background: transparent;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-weight: 500;
    text-align: left;
  }

  .nav-link-mobile--button:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .nav-user-mobile {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.95);
    padding: 1rem;
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    font-weight: 500;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .cart-link-mobile {
    position: relative;
  }

  .cart-count-mobile {
    position: absolute;
    top: 8px;
    right: 12px;
    background: #fe5e41ff;
    color: #ffffff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(254, 94, 65, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
      height: 60px;
      position: relative;
    }

    /* Ocultar men칰 desktop en mobile */
    .nav-menu {
      display: none;
    }

    /* Mostrar bot칩n hamburguesa */
    .hamburger {
      display: flex;
    }

    .brand-link {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      padding: 0 0.75rem;
    }

    .brand-link {
      font-size: 1rem;
    }
  }
</style>

<script>
  // Funci칩n para cerrar sesi칩n
  function logout() {
    sessionStorage.removeItem('vendedorSession');
    window.location.href = '/login';
  }

  // Actualizar contador del carrito
  function updateCartCount() {
    const cartItems = JSON.parse(localStorage.getItem("cartItems") || "[]");
    const totalItems = cartItems.reduce((sum: number, item: any) => sum + item.cantidad, 0);
    
    // Actualizar contador desktop
    const cartCountElement = document.getElementById("cart-count");
    if (cartCountElement) {
      cartCountElement.textContent = String(totalItems);
      cartCountElement.style.display = totalItems > 0 ? "flex" : "none";
    }

    // Actualizar contador mobile
    const cartCountMobileElement = document.getElementById("cart-count-mobile");
    if (cartCountMobileElement) {
      cartCountMobileElement.textContent = String(totalItems);
      cartCountMobileElement.style.display = totalItems > 0 ? "flex" : "none";
    }
  }

  // Toggle men칰 hamburguesa
  function toggleMobileMenu() {
    const hamburgerButton = document.getElementById("hamburgerButton");
    const navMenuMobile = document.getElementById("navMenuMobile");
    
    if (hamburgerButton && navMenuMobile) {
      hamburgerButton.classList.toggle("active");
      navMenuMobile.classList.toggle("active");
    }
  }

  // Cerrar men칰 mobile al hacer clic en un enlace
  function closeMobileMenu() {
    const hamburgerButton = document.getElementById("hamburgerButton");
    const navMenuMobile = document.getElementById("navMenuMobile");
    
    if (hamburgerButton && navMenuMobile) {
      hamburgerButton.classList.remove("active");
      navMenuMobile.classList.remove("active");
    }
  }

  // Manejar logout (desktop y mobile)
  const logoutButton = document.getElementById("logoutButton");
  const logoutButtonMobile = document.getElementById("logoutButtonMobile");

  function handleLogout() {
    if (confirm("쮼st치s seguro de que deseas cerrar sesi칩n?")) {
      logout();
    }
  }

  if (logoutButton) {
    logoutButton.addEventListener("click", handleLogout);
  }

  if (logoutButtonMobile) {
    logoutButtonMobile.addEventListener("click", () => {
      handleLogout();
      closeMobileMenu();
    });
  }

  // Mostrar nombre del vendedor
  function updateVendedorName() {
    const session = sessionStorage.getItem('vendedorSession');
    
    // Actualizar nombre desktop
    const vendedorNameElement = document.getElementById("vendedorName");
    if (vendedorNameElement) {
      if (session) {
        try {
          const sessionData = JSON.parse(session);
          vendedorNameElement.textContent = sessionData.nombre || 'Usuario';
        } catch {
          vendedorNameElement.textContent = 'Usuario';
        }
      } else {
        vendedorNameElement.textContent = 'No autenticado';
      }
    }

    // Actualizar nombre mobile
    const vendedorNameMobileElement = document.getElementById("vendedorNameMobile");
    if (vendedorNameMobileElement) {
      if (session) {
        try {
          const sessionData = JSON.parse(session);
          vendedorNameMobileElement.textContent = sessionData.nombre || 'Usuario';
        } catch {
          vendedorNameMobileElement.textContent = 'Usuario';
        }
      } else {
        vendedorNameMobileElement.textContent = 'No autenticado';
      }
    }
  }

  // Actualizar contador al cargar la p치gina
  document.addEventListener("DOMContentLoaded", () => {
    updateCartCount();
    updateVendedorName();

    // Configurar bot칩n hamburguesa
    const hamburgerButton = document.getElementById("hamburgerButton");
    if (hamburgerButton) {
      hamburgerButton.addEventListener("click", toggleMobileMenu);
    }

    // Cerrar men칰 al hacer clic en enlaces mobile
    const mobileLinks = document.querySelectorAll(".nav-link-mobile");
    mobileLinks.forEach(link => {
      link.addEventListener("click", closeMobileMenu);
    });

    // Cerrar men칰 al hacer clic fuera de 칠l
    document.addEventListener("click", (e) => {
      const navMenuMobile = document.getElementById("navMenuMobile");
      const hamburgerButton = document.getElementById("hamburgerButton");
      
      if (navMenuMobile && hamburgerButton && 
          !navMenuMobile.contains(e.target as Node) && 
          !hamburgerButton.contains(e.target as Node) &&
          navMenuMobile.classList.contains("active")) {
        closeMobileMenu();
      }
    });
  });

  // Escuchar cambios en el localStorage
  window.addEventListener("storage", updateCartCount);

  // Actualizar cuando se agregan items al carrito (para la misma pesta침a)
  const originalSetItem = localStorage.setItem.bind(localStorage);
  const setItemOverride = function (key: string, value: string) {
    originalSetItem(key, value);
    if (key === "cartItems") {
      updateCartCount();
    }
  };
  localStorage.setItem = setItemOverride;
</script>
