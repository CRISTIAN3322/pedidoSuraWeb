---
// Componente de navegaci贸n principal
---

<nav class="navigation">
  <div class="nav-container">
    <div class="nav-brand">
      <a href="/" class="brand-link"> Sura Web</a>
    </div>

    <div class="nav-menu">
      <div class="nav-user" id="navUser">
        <span class="nav-user__icon"></span>
        <span class="nav-user__name" id="vendedorName">Cargando...</span>
      </div>
      <a href="/" class="nav-link">  Clientes </a>
      <a href="/producto" class="nav-link">  Productos </a>
      <a href="/carrito" class="nav-link cart-link">
         Carrito
        <span class="cart-count" id="cart-count">0</span>
      </a>
      <button class="nav-link nav-link--button" id="logoutButton" title="Cerrar Sesi贸n">
         Salir
      </button>
    </div>
  </div>
</nav>

<style>
  .navigation {
    background: linear-gradient(
      135deg,
      rgba(0, 168, 120, 0.95) 0%,
      rgba(0, 168, 120, 0.9) 100%
    );
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0, 168, 120, 0.15);
    position: sticky;
    top: 0;
    z-index: 1000;
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 168, 120, 0.2);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
  }

  .brand-link {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    text-decoration: none;
    transition: var(--transition);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .brand-link:hover {
    color: #f5f5f0;
    transform: scale(1.05);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .nav-menu {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius);
    transition: var(--transition);
    position: relative;
  }

  .nav-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
  }

  .cart-link {
    position: relative;
  }

  .cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #fe5e41ff;
    color: #ffffff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(254, 94, 65, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .nav-link--button {
    background: transparent;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-weight: 500;
  }

  .nav-link--button:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .nav-user {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.95);
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .nav-user__icon {
    font-size: 1.1rem;
  }

  .nav-user__name {
    white-space: nowrap;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 0.5rem;
      height: 50px;
    }

    .nav-menu {
      gap: 0.75rem;
    }

    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
      border-radius: 6px;
    }

    .brand-link {
      font-size: 0.5rem;
    }

    .cart-count {
      width: 18px;
      height: 18px;
      font-size: 0.7rem;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      height: 45px;
      padding: 0 0.25rem;
    }

    .nav-menu {
      gap: 0.5rem;
    }

    .nav-link {
      padding: 0.4rem 0.75rem;
      font-size: 0.75rem;
      border-radius: 4px;
    }

    .nav-user {
      padding: 0.3rem 0.5rem;
      font-size: 0.7rem;
    }

    .nav-user__name {
      max-width: 80px;
    }

    .brand-link {
      display: none;
    }

    .cart-count {
      width: 16px;
      height: 16px;
      font-size: 0.65rem;
    }
  }
</style>

<script>
  // Funci贸n para cerrar sesi贸n
  function logout() {
    sessionStorage.removeItem('vendedorSession');
    window.location.href = '/login';
  }

  // Actualizar contador del carrito
  function updateCartCount() {
    const cartItems = JSON.parse(localStorage.getItem("cartItems") || "[]");
    const totalItems = cartItems.reduce((sum: number, item: any) => sum + item.cantidad, 0);
    const cartCountElement = document.getElementById("cart-count");
    if (cartCountElement) {
      cartCountElement.textContent = String(totalItems);
      cartCountElement.style.display = totalItems > 0 ? "flex" : "none";
    }
  }

  // Manejar logout
  const logoutButton = document.getElementById("logoutButton");
  if (logoutButton) {
    logoutButton.addEventListener("click", () => {
      if (confirm("驴Est谩s seguro de que deseas cerrar sesi贸n?")) {
        logout();
      }
    });
  }

  // Mostrar nombre del vendedor
  function updateVendedorName() {
    const session = sessionStorage.getItem('vendedorSession');
    const vendedorNameElement = document.getElementById("vendedorName");
    if (vendedorNameElement) {
      if (session) {
        try {
          const sessionData = JSON.parse(session);
          vendedorNameElement.textContent = sessionData.nombre || 'Usuario';
        } catch {
          vendedorNameElement.textContent = 'Usuario';
        }
      } else {
        vendedorNameElement.textContent = 'No autenticado';
      }
    }
  }

  // Actualizar contador al cargar la p谩gina
  document.addEventListener("DOMContentLoaded", () => {
    updateCartCount();
    updateVendedorName();
  });

  // Escuchar cambios en el localStorage
  window.addEventListener("storage", updateCartCount);

  // Actualizar cuando se agregan items al carrito (para la misma pesta帽a)
  const originalSetItem = localStorage.setItem.bind(localStorage);
  const setItemOverride = function (key: string, value: string) {
    originalSetItem(key, value);
    if (key === "cartItems") {
      updateCartCount();
    }
  };
  localStorage.setItem = setItemOverride;
</script>
