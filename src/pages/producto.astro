---
import ClienteSelector from '../components/organisms/ClienteSelector.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import BloqueoHorario from '../components/organisms/BloqueoHorario.astro';
import ProductosSelector from '../components/organisms/ProductosSelector.astro';
---
<BaseLayout>
    <h1>üõçÔ∏è Cat√°logo de Productos</h1>
    <div class="container">    
        <div class="card">
            <ProductosSelector />
        </div>
    </div>

</BaseLayout>


<style>
    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .page-header p {
        color: var(--white);
        font-size: 1.125rem;
        margin-top: 0.5rem;
        opacity: 0.9;
    }

    .page-footer {
        text-align: center;
        margin-top: 3rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .page-header {
            margin-bottom: 1.5rem;
        }

        .page-header p {
            font-size: 1rem;
        }

        .page-footer {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
            margin-top: 2rem;
        }

        .page-footer .btn {
            width: 100%;
            max-width: 300px;
            min-height: 48px;
        }
    }

    @media (max-width: 480px) {
        .page-header {
            margin-bottom: 1rem;
        }

        .page-header p {
            font-size: 0.9rem;
        }

        .page-footer {
            margin-top: 1.5rem;
        }

        .page-footer .btn {
            min-height: 48px;
            font-size: 0.9rem;
        }
    }
</style>