---
import ClienteSelector from '../components/organisms/ClienteSelector.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import BloqueoHorario from '../components/organisms/BloqueoHorario.astro';
---
<BaseLayout>
    <BloqueoHorario />
    <h1>Clientes</h1>
    <ClienteSelector />
    <footer>
        <a class="btn-secondary" href="/carrito">Carrito</a>
        <a class="btn-secondary" href="/">Catalogo </a>
    </footer>
</BaseLayout>

<style>
    footer {
        text-align: center;
        margin-top: 50px;
    }

      .btn-secondary {
        text-align: center;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-secondary {
        background-color: #4a5568;
        color: white;
    }
</style>